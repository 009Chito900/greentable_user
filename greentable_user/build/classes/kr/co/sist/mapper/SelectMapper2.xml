<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.sist.exam2">

	<!-- 한행 컬럼 한개 조회 : 사원테이블에서 입력되는 사원번호와 사원명에 일치하는 레코드를 검색. 
		조회컬럼 : 직무 
	-->
	<select id="singleRowSingleColumn" resultType="String" parameterType="kr.co.sist.vo.EmpSingleVO">
		select	job
		from		emp
		where	empno=#{ empno } and ename=#{ ename }
	</select>
	
	<!-- 한행 컬럼 여러개 조회  :   사원테이블에서 입력되는 사원번호와 사원명에 일치하는 레코드를 검색. 
			조회컬럼 : 직무,매니저번호,입사일,연봉,보너스,부서번호-->
	<select id="singleRowMultiColumn" resultType="kr.co.sist.domain.EmpSingleDomain" parameterType="kr.co.sist.vo.EmpSingleVO">
		select	job,to_char(hiredate,'mm-dd-yyyy hh24:mi:ss q"분기"') hiredate,
					mgr, sal, nvl(comm, 90) comm, deptno
		from		emp
		where	empno=#{ empno } and ename=#{ ename }
	</select>
			
