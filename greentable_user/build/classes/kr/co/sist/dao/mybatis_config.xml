<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
<!-- 값을 외부에 설정한 파일과 연결한다.  -->
<properties  resource="properties/database.properties"/>
 <!-- 여러 Mapper에서 사용할 Domain 이나 VO를 미리 선언해 두는 것 -->
 <typeAliases>
 	<typeAlias type="kr.co.sist.vo.ModifyMyBatisVO" alias="mmbVO"/>
 </typeAliases>

  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <!-- DB연결 설정 -->
      <dataSource type="POOLED">
        <property name="driver" value="${driverClass}"/>
        <property name="url" value="${url}"/>
        <property name="username" value="${username}"/>
        <property name="password" value="${password}"/>
      </dataSource>
    </environment>
  </environments>
  <!-- 실행할 쿼리문을 가진 XML 설정 -->
   <mappers>
    <mapper resource="kr/co/sist/mapper/ExamMapper.xml"/>
    <mapper resource="kr/co/sist/mapper/TestMyBatisMapper.xml"/>
  </mappers> 
</configuration>